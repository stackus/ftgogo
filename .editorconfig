root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
indent_size              = 2
tab_width                = 2
insert_final_newline     = true
trim_trailing_whitespace = true
max_line_length          = 120

[*.md]
indent_size              = 4
trim_trailing_whitespace = false

[{*.go, *.go2}]
indent_style = tab
indent_size  = 4
tab_width    = 4

[*.{yml, yaml}]
indent_style = tab

[Makefile]
indent_style = tab
